{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug zsh",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/vv",
      "args": [ "zsh" ],
      "cwd": "${fileDirname}",
      "preLaunchTask": "make all",
      "console": "externalTerminal"
    },
    {
      "name": "Debug lazygit",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/vv",
      "args": [ "lazygit" ],
      "cwd": "${fileDirname}",
      "preLaunchTask": "make all",
      "console": "externalTerminal"
    },
    {
      "name": "nvim quit",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/vv",
      "args": [ "nvim --clean --cmd ':qa'" ],
      "cwd": "${fileDirname}",
      "preLaunchTask": "make all",
      "console": "externalTerminal"
    },
    {
      "name": "Debug tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/test",
      "preLaunchTask": "make all",
      "cwd": "${fileDirname}",
    }
  ]
}
