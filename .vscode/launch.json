{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "attach",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/vv",
      "args": [ "attach", "--socket", "/tmp/velvet-debug" ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "make all",
      "console": "externalTerminal",
      "initCommands": [
        "command source ${workspaceFolder}/lldb-config"
      ]
    },
    {
      "name": "foreground",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/vv",
      "args": [ "--foreground", "--socket", "/tmp/velvet-debug" ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "make all",
      // "console": "integratedTerminal",
      "console": "externalTerminal",
      "initCommands": [
        "command source ${workspaceFolder}/lldb-config"
      ]
    },
    {
      "name": "Debug tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/test",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "make all",
      "console": "integratedTerminal",
      "initCommands": [
        "command source ${workspaceFolder}/lldb-config"
      ]
    }
  ]
}
